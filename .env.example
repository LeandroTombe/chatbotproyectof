# ============================================================================
# ChatBot RAG System - Environment Configuration Template
# ============================================================================
# Copia este archivo a .env y modifica los valores según necesites
# cp .env.example .env

# ========================================
# Ollama LLM Configuration
# ========================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=180
OLLAMA_MAX_TOKENS=300
OLLAMA_TEMPERATURE=0.7

# Otros modelos disponibles (descarga con: ollama pull <modelo>):
# - phi (1.3GB, rápido)
# - llama3.2 (2GB, recomendado)
# - mistral (4GB, mejor calidad)
# - codellama (4GB, para código)
# - llama2 (4GB)
# - tinyllama (muy pequeño, testing)

# ========================================
# RAG Configuration
# ========================================
RAG_TOP_K=2
RAG_MIN_RELEVANCE=0.3
RAG_MAX_CONTEXT_LENGTH=1000
RAG_INCLUDE_SOURCES=True
RAG_STRICT_MODE=True
RAG_ENABLE_SECURITY=True

# ========================================
# Embeddings Configuration
# ========================================
# Opción 1: Dummy (para testing sin descargar modelos)
# EMBEDDING_PROVIDER=dummy
# EMBEDDING_MODEL=dummy-embeddings
# EMBEDDING_DIMENSION=768

# Opción 2: HuggingFace E5 (recomendado para producción)
EMBEDDING_PROVIDER=hf-e5
EMBEDDING_MODEL=intfloat/multilingual-e5-small
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32

# Otros modelos de embeddings disponibles:
# - intfloat/multilingual-e5-small (384 dim, rápido)
# - intfloat/multilingual-e5-base (768 dim, balanceado)
# - intfloat/multilingual-e5-large (1024 dim, mejor calidad)

# ========================================
# Chunking Configuration
# ========================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNK_SEPARATOR=\n\n

# ========================================
# Vector Store Configuration
# ========================================
VECTOR_STORE_TYPE=chroma

# Opciones de Vector Store:
# - memory: En memoria, rápido pero no persiste datos (para testing)
# - chroma: Persistente en disco (recomendado para producción)

# Configuración de ChromaDB (solo si VECTOR_STORE_TYPE=chroma)
CHROMA_PERSIST_DIRECTORY=./vectorstore_data
CHROMA_COLLECTION_NAME=documents

# Nota: ChromaDB requiere instalación:
# pip install chromadb
